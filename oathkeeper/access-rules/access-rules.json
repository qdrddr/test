[
  {
    "id": "oathkeeper-oauth2-jwks-service-rule",
    "upstream": {
      "url": "http://oathkeeper-oauth2-jwks:9000"
    },
    "match": {
      "url": "https://proxy-oathk.wiseinfotec.net/auth/<.*>",
      "methods": ["GET"]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "query",
        "config": {
          "query_parameter": "original_url",
          "values": [
            "{{ print .Request.URL }}"
          ]
        }
      }
    ]
  },
  {
    "id": "oathkeeper-oauth2-jwks-whoami-service-rule",
    "upstream": {
      "url": "http://oathkeeper-oauth2-jwks-whoami:9001"
    },
    "match": {
      "url": "https://proxy-oathk.wiseinfotec.net/whoami",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "authenticators": [
      {
        "handler": "jwt"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "x-user-id": "{{ print .Subject }}",
            "x-user-email": "{{ print .Extra.email }}",
          }
        }
      }
    ]
  },
  {
    "id": "httpbin-rule",
    "upstream": {
      "url": "https://httpbin.org/",
      "strip_path": "/httpbin"
    },
    "match": {
      "url": "https://proxy-oathk.wiseinfotec.net/httpbin/<.*>",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "authenticators": [
      {
        "handler": "jwt"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-User-id": "{{ print .Subject }}",
            "x-user-email": "{{ print .Extra.email }}",
            "x-user-groups": "[{{ range $index, $element := .Extra.groups }}{{ if $index }}, {{ end }}'{{ $element }}'{{ end }}]",
            "x-user-attributes": "{{ \"{\" }}{{ $first := true }}{{ range $key, $value := .Extra.ak_proxy.user_attributes }}{{ if $first }}{{ $first = false }}{{ else }}, {{ end }}'{{ $key }}': '{{ $value }}'{{ end }}{{ \"}\" }}"
          }
        }
      }
    ]
  }
]

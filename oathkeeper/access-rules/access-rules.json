[
  {
    "id": "auth0-rule",
    "upstream": {
      "url": "http://oathkeeper-auth0:9000"
    },
    "match": {
      "url": "https://proxy-oathk.wiseinfotec.net/auth0/<.*>",
      "methods": ["GET"]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },
  {
    "id": "backend-service-rule",
    "upstream": {
      "url": "http://oathkeeper-whoami:9001/whoami"
    },
    "match": {
      "url": "https://proxy-oathk.wiseinfotec.net/whoami",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "authenticators": [
      {
        "handler": "jwt"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "x-user-id": "{{ print .Subject }}",
            "x-user-email": "{{ print .Extra.email }}",
            "x-user-picture": "{{ print .Extra.picture }}"
          }
        }
      }
    ]
  }
]

[
  {
    "id": "auth0-rule",
    "upstream": {
      "url": "http://oathkeeper-auth0:9000"
    },
    "match": {
      "url": "https://proxy-oathk.wiseinfotec.net/auth0/<.*>",
      "methods": ["GET"]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },
  {
    "id": "backend-service-rule",
    "upstream": {
      "url": "https://httpbin.org/"
    },
    "match": {
      "url": "https://proxy-oathk.wiseinfotec.net/<(?!auth).*>",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "authenticators": [
      {
        "handler": "jwt",
        "config": {
          "to": "https://proxy-oathk.wiseinfotec.net/auth0/authorize",
          "return_to_query_param": "return_to",
          "code": "301",
          "when": [
            "error": ["unauthorized"]
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-User": "{{ print .Subject }}"
          }
        }
      }
    ]
  }
]
